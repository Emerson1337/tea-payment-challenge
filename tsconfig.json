{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
		"paths": {
			"@components/*": [
				"./src/components/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@services/*": [
				"./src/services/*"
			],
			"@shared/*": [
				"./src/shared/*"
			],
			"@assets/*": [
				"./src/assets/*"
			]
		}
  },
  "exclude": [
    "node_modules",
    "config",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ],
  "include": [
    "src"
  ]
}
